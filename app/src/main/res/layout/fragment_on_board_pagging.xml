<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboardwallpaper2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.onBoard.OnBoardPaggingFragment">

    <View
        android:id="@+id/cruc1"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="620dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/onboardcruc1"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <View
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="130dp"
        app:layout_constraintEnd_toEndOf="@id/cruc1"
        app:layout_constraintBottom_toBottomOf="@id/cruc1"
        android:background="@drawable/onboardcruc2"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <View
        android:layout_marginEnd="373dp"
        android:layout_marginBottom="620dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/onboardcruc1"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <View
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/onboardcruc3"
        android:layout_width="400dp"
        android:layout_height="400dp"/>

    <View
        app:layout_constraintBottom_toBottomOf="@id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/onboardcruc4"
        android:layout_width="120dp"
        android:layout_height="100dp"/>

    <View
        android:id="@+id/container"
        app:layout_constraintTop_toTopOf="@id/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img"
        android:background="@drawable/cruc3"
        android:layout_width="190dp"
        android:layout_height="440dp"/>

    <TextView
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/txt_title"
        app:layout_constraintEnd_toStartOf="@id/img"
        app:layout_constraintTop_toTopOf="@id/container"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        tools:text="Добро пожаловать" />

    <ImageView
        android:scaleType="centerCrop"
        android:layout_marginTop="146dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@mipmap/ic_launcher"
        android:id="@+id/img"
        android:layout_marginStart="195dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="200dp"
        android:layout_height="430dp"/>

    <View
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        android:background="@drawable/onboardpolosa"
        android:layout_width="190dp"
        android:layout_height="4dp"/>

    <TextView
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img"
        app:layout_constraintTop_toTopOf="@id/container"
        android:layout_marginTop="90dp"
        android:id="@+id/desc"
        android:textAlignment="gravity"
        android:textSize="18sp"
        android:textColor="@color/white"
        tools:text="Изучайте английские слова легко и эффективно! Просто добавьте слова, которые хотите выучить, а мы поможем вам закрепить их с помощью увлекательных теоретических материалов и практических заданий."
        android:layout_width="170dp"
        android:layout_height="wrap_content"/>

    <View
        android:background="@drawable/cruc"
        android:id="@+id/view1"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="690dp"
        app:layout_constraintEnd_toStartOf="@id/view2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

    <View
        android:background="@drawable/cruc"
        android:id="@+id/view2"
        android:layout_marginTop="700dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

    <View
        android:background="@drawable/onboardcruc3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginTop="670dp"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <View
        android:background="@drawable/cruc"
        android:id="@+id/view3"
        android:layout_marginStart="12dp"
        android:layout_marginTop="690dp"
        app:layout_constraintStart_toEndOf="@id/view2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

    <View
        android:background="@drawable/onboardcruc1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="600dp"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>